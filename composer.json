{
  "name": "lunr/gravity",
  "description": "Lunr.Gravity is a database library that doesn't limit functionality to the least common denominator.",
  "keywords": [ "cli", "getopt" ],
  "homepage": "https://github.com/lunr-php/lunr.gravity",
  "type": "library",
  "license": "MIT",
  "require": {
    "psr/log": "~1.1.0",
    "php": ">=7.4",
    "lunr/halo": "dev-master",
    "lunr/config": "dev-master"
  },
  "suggest": {
    "ext-mysqli": "Needed for MySQL/MariaDB support in Gravity (0.1)"
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.0 <9.6",
    "ext-xdebug": "~3.0"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\": "src/Lunr/"}
  }
}
